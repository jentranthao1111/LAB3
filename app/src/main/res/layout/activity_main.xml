<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00BCD4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:enabled="false"
        android:text="Simple Calculator"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/resultEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:textSize="40dp"
        android:id="@+id/resultEdit"
        android:layout_width="fill_parent"
        android:layout_height="119dp"
        android:autoHandwritingEnabled="false"
        android:backgroundTint="#E7E7DC"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:enabled="true"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="96dp" />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="418dp"
        android:layout_height="600dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="-7dp">

        <LinearLayout
            android:id="@+id/ButtonRow01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn07click"
                android:text="7"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn08click"
                android:text="8"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn09click"
                android:text="9"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnDivideclick"
                android:text="/"
                android:textColorLink="#BD8686"
                android:textSize="20sp"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn04click"
                android:text="4"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn05click"
                android:text="5"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn06click"
                android:text="6"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnMultiplyclick"
                android:text="X"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow03"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn01click"
                android:text="1"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn02click"
                android:text="2"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn03click"
                android:text="3"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnMinusclick"
                android:text="-"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow04"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnClearclick"
                android:text="C"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btn00click"
                android:text="0"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnDotclick"
                android:text="."
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnAddclick"
                android:text="+"
                android:textColorLink="#C47C7C"
                android:textSize="20sp"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow05"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#D48A8A"
                android:onClick="btnEqualclick"
                android:text="="
                android:textSize="20sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>